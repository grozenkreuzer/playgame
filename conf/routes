# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.MainController.index
GET     /table                      controllers.MainController.table( skinId : Int ?=0 )

# Widgets
#GET     /widgets                    controllers.WidgetController.listWidgets
#POST    /widgets                    controllers.WidgetController.createWidget

# DataSource
GET     /ds                          controllers.ScController.processDsRequest

# Map static resources from the /public folder to the /assets URL path

GET     /assets/javascripts/isomorphic/skins/some/*file       controllers.Assets.at(path="/public/javascripts/isomorphic/skins/" + sc.skinName  , file)
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
#GET     /javascripts/isomorphic/skins/*file       controllers.Assets.at(path="/isomorphic/system/", file)
#GET     /javascripts/*file          controllers.Assets.at(path="/isomorphic/system/modules", file)

                                    
